extends ./layout/app

block styles
  link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
      div(class="py-5")
          h1(class="text-3xl text-center font-extrabold mb-10") Ubicación en el mapa

          div(class="flex flex-col md:flex-row items-center py-10 gap-4")
              h2(class="text-sm text-gray-800 font-bold") Filtrar por:

              div(class="w-full md:w-auto flex items-center gap-2")
                  label(for="categoria" class="text-sm text-gray-600 font-bold") Categoría
                  select(id="categoria" class="flex-1 w-full py-2 px-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none hover:cursor-pointer focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500")
                      option(value="") -- Seleccionar --
                      each categoria in categorias
                          option(value=categoria.id)= categoria.nombre

              div(class="w-full md:w-auto flex items-center gap-2")
                  label(for="precio" class="text-sm text-gray-600 font-bold") Precio
                  select(id="precio" class="flex-1 w-full py-2 px-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none hover:cursor-pointer focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500")
                      option(value="") -- Seleccionar --
                      each precio in precios
                          option(value=precio.id)= precio.nombre

          div(id="mapa-inicio" class="h-[400px]")

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js")
