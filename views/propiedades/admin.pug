extends ../layout/admin

block contenido
  div.py-5.px-10
    h1.text-4xl.mb-5.font-extrabold.text-center Bienes
      span.font-normal Ra√≠ces
    h2.font-bold.text-xl.text-center= pagina

    a(href="/propiedades/crear" class="rounded-full p-2 px-5 bg-indigo-500 hover:bg-indigo-600 text-white font-bold text-center inline-block mt-12 mb-5 w-full sm:w-auto") Publicar propiedad

    //- pre= JSON.stringify(propiedades,null,2)

    if propiedades.length

      div(class="bg-white shadow rounded-lg")
        ul(class="divide-y divide-gray-200")
          each propiedad in propiedades
            li
              div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 md:space-y-0 gap-4")
                  div(class="sm:w-1/4 md:w-1/6")
                    img(src=`uploads/${propiedad.imagen}` alt=`Imagen de la propiedad ${propiedad.titulo}` class="w-full rounded-lg block")

                  div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 space-y-2")
                      a(class="block text-xl font-extrabold text-indigo-600 truncate" href="")=propiedad.titulo
                      p(class="text-black font-bold")=propiedad.categoria.nombre

                      div(class="flex gap-2 items-center")
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        p=propiedad.precio.nombre

                  div(class="sm:w-1/4 md:w-2/6 lg:flex-1 flex flex-col gap-2 lg:flex-row")
                      form(action="#")
                          input(type="submit" class=`w-full cursor-pointer px-3 py-3 md:py-1 text-xs leading-5 font-semibold rounded-full ${propiedad.publicado ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'}` value=`${propiedad.publicado ? "Publicado" : "No publicado"}`)

                      a(href=`/propiedades/editar/${propiedad.id}` class="text-center cursor-pointer px-3 py-3 md:py-1 text-xs leading-5 font-semibold rounded-full bg-indigo-100 text-indigo-800") Editar

                      form(action="#")
                          input(type="submit" class=`w-full cursor-pointer px-3 py-3 md:py-1 text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800` value="Eliminar")


    else
      p.text-center No hay propiedades publicadas