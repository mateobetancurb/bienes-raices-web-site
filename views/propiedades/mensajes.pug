extends ../layout/admin

block contenido
  h2(class="text-2xl font-bold text-center mb-5")=pagina

  a(href="/mis-propiedades" class="px-6 mx-10 rounded-full p-2 bg-indigo-500 hover:bg-indigo-600 text-white font-bold text-center inline-block mt-5 mb-5 w-full transition-colors sm:w-auto") Volver

  div(class="mx-auto max-w-4xl mt-5 p-5 bg-white shadow")

    if mensajes.length
      ul
        each mensaje in mensajes
          li(class="border-gray-200 border-b p-5")
            p(class="font-bold text-gray-800")=`Nombre: `
              span(class="font-normal text-gray-700")=mensaje.usuario.nombre

            p(class="font-bold text-gray-800")=`Correo: `
              span(class="font-normal text-gray-700")=mensaje.usuario.email

            p(class="font-bold text-gray-800")=`Mensaje: `
              span(class="font-normal text-gray-700")=mensaje.mensaje

            p(class="font-bold text-gray-800")=`Fecha del mensaje: `
              span(class="font-normal text-gray-700")=formatearFecha(mensaje.createdAt)

    else
      p(class="text-center text-gray-700") No hay mensajes para mostrar